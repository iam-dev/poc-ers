{
  "name": "poc-ers-contracts",
  "version": "1.0.0",
  "description": "PoC Ethereum Reality Service contracts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "compile": "hardhat compile && lerna run tsc",
    "coverage": "env COVERAGE=true hardhat coverage",
    "lint": "npm run lint:ts && npm run lint:sol",
    "lint:fix": "npm run lint:ts:fix && npm run lint:sol:fix",
    "lint:ts": "prettier --loglevel warn --ignore-path .gitignore '**/*.{js,ts}' --check && eslint --ignore-path .gitignore .",
    "lint:js:fix": "prettier --loglevel warn --ignore-path .gitignore '**/*.{js,ts}' --write && eslint --ignore-path .gitignore . --fix",
    "lint:sol": "prettier --loglevel warn --ignore-path .gitignore '{contracts,test}/**/*.sol' --check && solhint '{contracts,test}/**/*.sol'",
    "lint:sol:fix": "prettier --loglevel warn --ignore-path .gitignore '{contracts,test}/**/*.sol' --write",
    "clean": "hardhat clean && rimraf build contracts/build",
    "lerna-publish": "yarn build && lerna publish && lerna run tsc-clean",
    "prepare": "husky install",
    "prettier": "prettier --write --ignore-path .gitignore .",
    "upgrade-dependencies": "yarn-up -e '@arx/spec,@arx/typechain-types' && yarn upgrade",
    "test": "hardhat test",
    "slither": "npm run clean && slither . --detect reentrancy-eth,reentrancy-no-eth,reentrancy-unlimited-gas"
  },
  "author": "IaM <DEV>",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@arx/spec": "link:spec",
    "@arx/typechain-types": "link:typechain-types",
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@openzeppelin/contracts": "4.8.1",
    "@solidstate/abi": "^0.0.52",
    "@solidstate/contracts": "0.0.52",
    "@solidstate/library": "^0.0.52",
    "@solidstate/spec": "^0.0.52",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=12.0.0",
    "chai": "^4.2.0",
    "ethers": "^5.4.7",
    "fs": "^0.0.1-security",
    "graphlib": "^2.1.8",
    "hardhat": "^2.12.6",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-preprocessor": "^0.1.5",
    "hardhat-spdx-license-identifier": "^2.1.0",
    "husky": "^8.0.3",
    "lerna": "^6.4.1",
    "lodash.startcase": "^4.4.0",
    "lodash.zip": "^4.2.0",
    "prettier": "^2.8.3",
    "prettier-plugin-solidity": "^1.1.1",
    "solidity-ast": "^0.4.43",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0",
    "yargs": "^17.6.2"
  }
}
